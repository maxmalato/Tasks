@page
@model Tasks.Pages.CreateModel

@{
    ViewData["Title"] = "Nova Tarefa";
}

<main class="container mt-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="mb-3">
            <label asp-for="NewTodo.Title" class="form-label"></label>
            <input asp-for="NewTodo.Title" class="form-control"/>
            <span asp-validation-for="NewTodo.Title" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="NewTodo.Description" class="form-label"></label>
            <textarea asp-for="NewTodo.Description" class="form-control"></textarea>
            <span asp-validation-for="NewTodo.Description" class="text-danger"></span>
        </div>
        
        <div class="form-check mb-3">
            <input asp-for="NewTodo.IsDone" class="form-check-input"/>
            <label asp-for="NewTodo.IsDone" class="form-check-label"></label>
        </div>
        
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</main>
