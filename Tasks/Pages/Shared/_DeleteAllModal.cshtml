@model IndexModel

<div class="modal fade" tabindex="-1" id="deleteAllModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir todas as tarefas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Deseja excluir todas as tarefas?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" asp-page-handler="DeleteAll">
                    <button type="submit" class="btn btn-danger">Excluir tudo</button>
                </form>
            </div>
        </div>
    </div>
</div>